{
  "name": "bluetail",
  "description": "Twitter API library for Node.js",
  "author": "Ciffelia <mc.prince.0203@gmail.com> (https://ciffelia.com/)",
  "repository": "github:ciffelia/bluetail",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --ext .js,.ts ./src",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --ext .js,.ts --fix ./src",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "14.17.16",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "packageManager": "yarn@3.0.2",
  "lint-staged": {
    "*.{js,ts,json,yml,md}": "prettier --check",
    "*.{js,ts}": "eslint"
  },
  "dependencies": {
    "cross-fetch": "patch:cross-fetch@^3.1.4#./patch/cross-fetch.diff",
    "oauth-1.0a": "^2.2.6"
  }
}
